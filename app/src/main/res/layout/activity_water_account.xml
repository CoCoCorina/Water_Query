<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3F8D9B"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="我的水号"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/linearlayout_backgroud_top_fillet"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/account_supply_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|left"
                android:text="给水号："
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_backgroud_bottom_fillet_shadow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="户主姓名："
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/account_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="水表信息："
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/account_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="抄表编码："
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/account_delegate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="客户代表："
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/account_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="应交水费："
                android:textColor="#000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_account_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_backgroud_bottom_left"
                    android:gravity="center"
                    android:text="水费缴纳"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btn_account_query"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#cccccc"
                    android:gravity="center"
                    android:text="水费查询"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btn_account_monitor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#cccccc"
                    android:gravity="center"
                    android:text="远程监测"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btn_account_unbundling"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_backgroud_bottom_right"
                    android:gravity="center"
                    android:text="解绑水号"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="绑定给水号"
        android:textColor="#000"
        android:textSize="18sp" />
</LinearLayout>