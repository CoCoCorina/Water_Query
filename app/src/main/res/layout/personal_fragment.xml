<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".fragment.PersonalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#3F8D9B"
                android:gravity="center"
                android:text="便民服务"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout_person_into"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#3F8D9B">

                <ImageView
                    android:id="@+id/img_person_face"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/linearlayout_background_general"
                    android:src="@drawable/icon_face" />

                <TextView
                    android:id="@+id/txt_person_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="176****7296"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_person_my_water"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/ic_water_services"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:text="我的自来水"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_person_my_direct_drink_water"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/ic_drinking_water"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:text="我的直饮水"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_person_my_collection"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/ic_collection"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:text="我的收藏"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_person_my_like"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/ic_praise"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:text="我的点赞"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_person_my_comment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/ic_comment"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:text="我的评论"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_person_check_version"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/ic_to_update"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:text="检查新版本"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_person_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/ic_log_out"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:text="退出登录"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>